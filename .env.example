# ========================================
# CORE CONFIGURATION
# ========================================

# Convex Backend Configuration
CONVEX_DEPLOYMENT=anonymous:anonymous-lightfast-chat
NEXT_PUBLIC_CONVEX_URL=http://127.0.0.1:3212

# Environment Detection
NODE_ENV=development
NEXT_PUBLIC_VERCEL_ENV=development

# ========================================
# AUTHENTICATION CONFIGURATION
# ========================================

# GitHub OAuth (Optional - adds GitHub login when configured)
# Leave empty to use only password authentication
# AUTH_GITHUB_ID=your_github_client_id
# AUTH_GITHUB_SECRET=your_github_client_secret

# Authentication Providers (Optional - Environment-based defaults)
# NEXT_PUBLIC_ENABLE_PASSWORD_AUTH=false    # Disable password auth (not recommended)
# NEXT_PUBLIC_ENABLE_ANONYMOUS_AUTH=true    # Force enable anonymous auth

# JWT Configuration (Required for authentication)
JWT_PRIVATE_KEY=your_jwt_private_key
JWKS=your_jwks_string

# ========================================
# HOSTED VERSION FEATURES
# ========================================

# Set to "true" to enable hosted-only features
NEXT_PUBLIC_HOSTED_VERSION=false

# Monitoring (Only for hosted version or when explicitly enabled)
# NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
# NEXT_PUBLIC_ENABLE_SENTRY=false

# Analytics (Only for hosted version or when explicitly enabled)
# NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Commercial Features (Only for hosted version)
# NEXT_PUBLIC_ENABLE_POLAR=false
# NEXT_PUBLIC_ENABLE_BILLING=false

# ========================================
# DEVELOPMENT FEATURES
# ========================================

# Debug Tools (Enabled in development by default)
# NEXT_PUBLIC_ENABLE_DEBUG_TOOLS=false

# Site Configuration
SITE_URL=http://localhost:3000

# ========================================
# AI MODEL CONFIGURATION
# ========================================

# Anthropic (Claude) - Required
ANTHROPIC_API_KEY=your_anthropic_api_key

# OpenAI (GPT models) - Required
OPENAI_API_KEY=your_openai_api_key
