{
  "name": "lightfast-chat",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "turbo run dev",
    "dev:www": "turbo run dev --filter=@lightfast/www",
    "dev:docs": "turbo run dev --filter=@lightfast/docs",
    "build": "turbo run build",
    "build:www": "turbo run build --filter=@lightfast/www",
    "build:docs": "turbo run build --filter=@lightfast/docs",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "clean": "turbo run clean",
    "typecheck": "turbo run typecheck",
    "vercel-build": "cd apps/www && bunx convex deploy --cmd 'turbo build --filter=@lightfast/www'",
    "ui:add": "bunx shadcn@latest add",
    "ui:diff": "bunx shadcn@latest diff"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lightfastai/chat.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lightfastai/chat/issues"
  },
  "homepage": "https://github.com/lightfastai/chat#readme",
  "description": "Lightfast Chat - Turborepo Monorepo",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "bun@1.2.10",
  "trustedDependencies": [
    "@biomejs/biome",
    "@tailwindcss/oxide",
    "@vercel/speed-insights"
  ]
}
